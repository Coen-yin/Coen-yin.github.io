{
  "appwrite": {
    "projectId": "[YOUR_APPWRITE_PROJECT_ID]",
    "endpoint": "https://cloud.appwrite.io/v1",
    "functions": {
      "aiChat": {
        "functionId": "ai-chat",
        "name": "AI Chat Function",
        "runtime": "node-18.0",
        "entrypoint": "index.js",
        "environment": {
          "GROQ_API_KEY": "[SET_IN_APPWRITE_CONSOLE]"
        }
      }
    }
  },
  "deployment": {
    "steps": [
      "1. Create Appwrite project and note Project ID",
      "2. Deploy function from functions/ai-chat/ directory",
      "3. Set GROQ_API_KEY in function environment variables",
      "4. Update APPWRITE_FUNCTION_URL in script.js",
      "5. Set DEVELOPMENT_MODE = false in script.js",
      "6. Remove GROQ_API_KEY line from script.js",
      "7. Test and deploy to production"
    ]
  }
}